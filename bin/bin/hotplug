#!/usr/bin/bash

export DISPLAY=:0
export XAUTHORITY=/home/kap/.Xauthority

MONITOR='DP-1'
EXTERNAL_MONITOR_STATUS=$(cat /sys/class/drm/card0-$MONITOR/status )

if [ $EXTERNAL_MONITOR_STATUS  == "connected" ]; then
    while ! xrandr  | grep 'DP-1 connected' ; do sleep 1; done;
    xrandr --output eDP1 --off --output DP-1 --primary --mode 1920x1080 --pos 0x0 --rotate normal
else
    xrandr --output eDP1 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output DP-1 --off
fi
